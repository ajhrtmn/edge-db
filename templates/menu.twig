{% if menuPrimary %}

<style>
	#menu { color: rgba(35,35,35,1); }
	#menu > li > a:hover { color: rgba(153,153,153,1); }
	#menu.burger > li > span {
		font-size: 2em;
		cursor: pointer;
		color: #BF021C;
	}
	#menu.burger > li > span:hover {
		color: #BF021C;
	}

	@media only screen and (max-width: 1000px) {
		#nav-main {
		}
		#menu.large {
			display: none;
		}
		#menu.burger {
			display: flex;
			justify-content: center;
		}
		.mobile-menu {
			display: none;
			z-index: 999;
			position: absolute;
			width: 95%;
			left: 2.5%;
			background: rgba(255,255,255,1.0);
			border-top: 3px solid #bf021c;
			box-shadow: 0 2px 5pxrgba(0,0,0,.1);
			-moz-box-shadow: 0 2px 5px rgba(0,0,0,.1);
			-webkit-box-shadow: 0 2px 5px rgb(0 0 0 / 10%);
			line-height: 26px;
    		padding: 5%;
		}
		.mobile-menu > li > a {
			padding: 1rem;
			font-size: 16px;
			transition: color 300ms ease 0ms;
			font-weight: 700;
    		background-color: rgba(0,0,0,.03);
			border-bottom: 1px solid rgba(0,0,0,.03);
			padding: 10px 5%;
			display: block;
		}
	}

	@media (min-width: 1000px) {
		#menu.small {
			display: none;
		}
		#menu.burger {
			display: none;
		}
	}

	
</style>
	<ul id="menu" class="large w-full h-full flex flex-row items-end text-lg gap-8">
	{% for item in items %}
		<li class="{{ item.classes | join(' ') }}">
			<a id="menu-{{loop.index}}" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
			{% if item.children %}
				{% include "menu.twig" with {'items': item.children} %}
			{% endif %}
		</li>
	{% endfor %}
	</ul>

	<ul id="menu" class="burger w-full h-full text-lg gap-8">
		<li class="mt-4 mobile-menu-button"><span class="material-icons"> menu </span></li>
	</ul>

	<ul id="menu" class="small mobile-menu w-full h-full block block-col items-end text-lg gap-8 p-8">
	{#<li class="close-mobile p-4 cursor-pointer font-bold text-3xl">X</li>#}
	{% for item in items %}
		<li class="{{ item.classes | join(' ') }}">
			<a id="menu-{{loop.index}}" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
			{% if item.children %}
				{% include "menu.twig" with {'items': item.children} %}
			{% endif %}
		</li>
	{% endfor %}
	</ul>


	
{% endif %}
