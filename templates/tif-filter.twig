    </div>

</div>

<script>
tifs.sort((a, b) => {
    const a_year = new Date(a.DateApproved.substring(0, 10)).getFullYear();
    const b_year = new Date(b.DateApproved.substring(0, 10)).getFullYear();

    if (a_year < b_year) {
        return -1;
    } else if (a_year > b_year) {
        return 1;
    } else {
        return 0;
    }
});

tifs.reverse();

var _searched = tifs;
var _filtered = _searched;

function impactFilter() {
    const total_jobs = _filtered.map(function (t) {
        return parseInt(t.ProjectedTotalJobs);
    });

    const total_capital_investment = _filtered.map(function (t) {
        return parseInt(t.TotalInvestment);
    });

    const total_number_of_tifs = _filtered.length;

    const total_amount_of_tifs = _filtered.map(function (t) {
        return parseInt(t.TIFAmount);
    });

    var _total_jobs;
    if (total_jobs.length > 0) { _total_jobs = total_jobs.reduce((a, b) => a + b)} else {_total_jobs = 0}

    var _total_capital_investment;
    if (total_capital_investment.length > 0) { _total_capital_investment = total_capital_investment.reduce((a, b) => a + b)} else {_total_capital_investment = 0}

    var _total_amount_of_tifs;
    if (total_amount_of_tifs.length > 0) { _total_amount_of_tifs = total_amount_of_tifs.reduce((a, b) => a + b)} else {_total_amount_of_tifs = 0}

    var tif_html = `
        <div class="grid grid-cols-12 font-bold text-base text-center">
            <div class="col-span-2">Total Jobs</div>
            <div class="col-span-4">Total Capital Investment</div>
            <div class="col-span-3">Total Number of TIFs</div>
            <div class="col-span-3">Total Amount of TIFs</div>
        </div>
        <div class="grid grid-cols-12 text-center">
            <div class="col-span-2">
                ${_total_jobs}
            </div>
            <div class="col-span-4">
                ${formatter.format(_total_capital_investment)}
            </div>
            <div class="col-span-3">
                ${total_number_of_tifs}
            </div>
            <div class="col-span-3">
                ${formatter.format(_total_amount_of_tifs)}
            </div>
        </div>`;

    document.getElementById('total_results').innerHTML = tif_html;
}
impactFilter();

var base_html = `<div id="tif_list" class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-x-auto">
        <table class="max-w-screen-xl mx-auto min-col">
          <thead class="edge-bg-dark text-white diag">
            <tr>
              <th scope="col" class="px-6 py-4 text-left">
                Date Approved
              </th>
              <th scope="col" class="px-6 py-4 text-left">
                Company Name
              </th>
              <th scope="col" class="px-6 py-4 text-left">
                TIF Amount
              </th>
            </tr>
          </thead>
          <tbody class="">`;

function Filters(){
    this.date_approved;
    this.total_jobs;
    this.mwbe_losb;
    this.total_investment;
    this.tif_amount;
    this.zipcode;
}

var filter_util = new Filters();
var html = base_html;

function getFilters(){
    filter_util.date_approved = $('#date-approved-selection').val();
    filter_util.total_jobs = $('#total-jobs-selection').val();
    filter_util.mwbe_losb = $('#mwbe-losb-selection').val();
    filter_util.total_investment = $('#total-investment-selection').val();
    filter_util.tif_amount = $('#tif-amount-selection').val();
    filter_util.zipcode = $('#zipcode-input').val();
}

function sortTIFList(){
    html = base_html;
    getFilters();
    var temp_list_filtered = [];

    console.log(filter_util);

    for (p of _searched){
        const DateApproved = checkTIFDateApproved(p);
        if (!DateApproved) { continue; }
        if (!checkTotalJobs(p)) { continue; }
        if (!checkMWBE_LOSB(p)) { continue; }
        if (!checkTotalInvestment(p)) { continue; }
        if (!checkTIFAmount(p)) { continue; }
        if (!checkZipcode(p)) { continue; }

        temp_list_filtered.push(p);

        html += `
        <tr class="row-b1">
            <td class="px-6 py-4">${DateApproved}</td>
            <td class="px-6 py-4 edge-link-gray max-w-xs">
                <a class="edge-link-red" href="${URL + p.Id}">
                    ${p.CompanyName}
                </a>
            </td>
            <td class="px-6 py-4">${formatter.format(p.TIFAmount)}</td>               
        </tr>`;
    }

    if (temp_list_filtered.length != 0){
        _filtered = temp_list_filtered;
        impactFilter();
    }
    
    html += `</tbody>
        </table>
      </div>
    </div>
  </div>
</div>`;

    if (html == base_html || temp_list_filtered.length == 0 || _searched.length == 0){
        html = `<div class="edge-wrapper px-6 py-4">No Results Found</div>`;
    }

    document.getElementById('edge_tifs').innerHTML = html;
}

function checkTIFDateApproved(_p){
    const year = new Date(_p.DateApproved.substring(0, 10)).getFullYear();

    if (year == filter_util.date_approved || filter_util.date_approved == ""){
        const day = new Date(_p.DateApproved.substring(0, 10)).getDate();
        const month = new Date(_p.DateApproved.substring(0, 10)).getMonth();

        return `${months[month]} ${day}, ${year}`;
    } else {
        return false;
    }
}
function checkTotalJobs(_p){
    var tj = parseInt(_p.ProjectedTotalJobs);

    if (filter_util.total_jobs == 1){
        if (tj > 0 && tj < 26){
            return true;
        } else {
            return false;
        }
    } else if (filter_util.total_jobs == 2){
        if (tj > 24 && tj < 101){
            return true;
        } else {
            return false;
        }
    } else if (filter_util.total_jobs == 3){
        if (tj > 100){
            return true;
        } else {
            return false;
        }
    } else if (filter_util.total_jobs == ""){
        return true;
    } else {
        return false;
    }
}
function checkMWBE_LOSB(_p){
    var m_l_total = parseInt(_p.ProjectedMWBESpending);
    if (filter_util.mwbe_losb == 1){
        if (m_l_total > 0 && m_l_total < 20001){
            return true;
        } else {
            return false;
        }
    } else if (filter_util.mwbe_losb == 2){
        if (m_l_total > 20000){
            return true;
        } else {
            return false;
        }
    } else if (filter_util.mwbe_losb == ""){
        return true;
    } else {
        return false;
    }
}
function checkTotalInvestment(_p){
    var p_total = parseInt(_p.TotalInvestment);
    if (filter_util.total_investment == 1){
        if (p_total > 0 && p_total < 100001){
            return true;
        } else {
            return false;
        }
    } else if (filter_util.total_investment == 2){
        if (p_total > 100000){
            return true;
        } else {
            return false;
        }
    } else if (filter_util.total_investment == ""){
        return true;
    } else {
        return false;
    }
}
function checkTIFAmount(_p){
    var t_total = parseInt(_p.TIFAmount);
    if (filter_util.tif_amount == 1){
        if (t_total > 0 && t_total < 20001){
            return true;
        } else {
            return false;
        }
    } else if (filter_util.tif_amount == 2){
        if (t_total > 20000){
            return true;
        } else {
            return false;
        }
    } else if (filter_util.tif_amount == ""){
        return true;
    } else {
        return false;
    }
}
function checkZipcode(_p){
    if (filter_util.zipcode == ""){
        return true;
    } else {
        if (_p.ZipCode.includes(filter_util.zipcode)){
            return true;
        } else {
            return false;
        }
    }
}

sortTIFList();
$('#date-approved-selection').change(() => sortTIFList());
$('#total-jobs-selection').change(() => sortTIFList());
$('#mwbe-losb-selection').change(() => sortTIFList());
$('#total-investment-selection').change(() => sortTIFList());
$('#tif-amount-selection').change(() => sortTIFList());
$('#zipcode-input').keyup(() => sortTIFList());

$("#search-button").click(function(){
    if ($("#name-search").val() == ""){
        _searched = tifs;
    } else {
        var _temp_list= [];
        for (p in tifs){
            if (tifs[p].CompanyName.toLowerCase().includes($("#name-search").val().toLowerCase())){
                _temp_list.push(tifs[p]);
            }
        }
        _searched = _temp_list;
        _filtered = _temp_list;
        console.log(_searched);
    }
    sortTIFList();
    impactFilter();
    if ($(window).scrollTop() < 550 && $("#name-search").val() != "") {
        $("html").animate({scrollTop: 550}, 400);
    }
});

var toggle = "static";

$("#filter-tab").click(function(){
    var t = $(this).find('span');
    console.log();
    if ( t.html().trim() == "arrow_right" ) {
        $(this).find('span').html('arrow_left');
        toggle = "absolute";
        $("#filter-selection-list").animate(
            { right: "+=300" }, 400, function() {
            // Animation complete.
        });
        $( this ).animate(
            { right: "+=0", top: "-=0" },
            {
                step: () => {
                    $('#filter-selection-list').css('box-shadow', '5px 5px 5px rgba(0,0,0,.25)');
                }
            }, 200, function() {
            // Animation complete.
        });
        if ($(window).scrollTop() < 550) {
            $("html").animate({scrollTop: 550}, 400);
        }
    } else if ( t.html().trim() == "arrow_left" ) {
        $(this).find('span').html('arrow_right');
        toggle = "static";
        $("#filter-selection-list").animate(
            { right: "-=300" }, 400, function() {
            // Animation complete.
        });
        $( this ).animate(
            { right: "-=0", top: "+=0" },
            {
                step: () => {
                    $('#filter-selection-list').css('box-shadow', '5px 5px 5px rgba(0,0,0,0)');
                }
            }, 200, function() {
            // Animation complete.
        });
    }
});

$(window).scroll(function(){
  if ($(window).scrollTop() > ($("#filter-tab").position().top - 100)){
    $("#filter-tab").css("position","fixed");
    $("#filter-selection-list").css("position","fixed");
    $("#filter-tab").css("top","30px");
    $("#filter-selection-list").css("top","50px");
  } else {
    $("#filter-tab").css("position","absolute");
    $("#filter-selection-list").css("position","absolute");
    $("#filter-tab").css("top","580px");
    $("#filter-selection-list").css("top","600px");
  }

  if ($(window).scrollTop() < 550) {
    $("#filter-tab").css("position","absolute");
    $("#filter-selection-list").css("position",toggle);
    $("#filter-tab").css("top","580px");
    $("#filter-selection-list").css("top","600px");
  }
});
</script>